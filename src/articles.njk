---
layout: _page_skeleton.njk
permalink: "/articles/"
title: "Articles"
---
{%- from "_njk/component.njk" import component -%} 
{{ component('main-navigation', { strapline: site.strapline })}}
<section class="container mx-auto p-4 max-w-6xl mt-12">
  <div class="prose prose-xl">
    <h1>{{ title }}</h1>
  </div>
</section>
<section class="container mx-auto p-4 max-w-6xl" >
  <div class="grid grid-cols-12 gap-4 mt-8" >
    {% for post in posts %}
    <div class="col-span-4">
      {{ component("hero-card", 
      { title: post.title, 
        category: post.category, 
        summary: post.summary, 
        heroImageURL: post.heroImageURL,
        date: post.date, 
        slug: post.slug }
        ) }}
      </div>
      {% endfor %}
    </div>
  </div>
</section>