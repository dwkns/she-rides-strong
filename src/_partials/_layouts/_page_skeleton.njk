<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="">
   
    {% if site.currentEnv == "development" %}
      <script>
        async function fetchAsync() {
          const url = "/reload/" + btoa("{{ page.inputPath }}") // convert template path to b64
          let response = await fetch(url)
          console.log(`Sent: ${url} â€” Recieved ${response.status}`)
        }
      </script>
      <div class="fixed top-0 right-0 left-0">
        <form  class=""  id="refresh-button" method="get">
          <button class=" p-2 bg-yellow-400 rounded" onclick="fetchAsync()" type="button">Refresh</button>
        </form>
      </div>
    {% endif %}

     {{ content | safe }}
  
  </body>
</html>
